{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "pretty": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "removeComments": false
  },
  "include": ["src/**/*"]
}
